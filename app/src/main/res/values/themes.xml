<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kotlin_Project" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Edit" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textColorHint">@color/purple_500</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="EditTextCreate" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Theme.Kotlin_Project.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Kotlin_Project.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kotlin_Project.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>